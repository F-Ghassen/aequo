{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/navbar.html.twig' %}

    <section>
        <div class="titles mt-5">
            <h1>
                {% if app.request.locale == 'en' %}
                    {{ b.titleEn }}
                {% else %}
                    {{ b.titleFr }}
                {% endif %}
            </h1>
        </div>
        <div class="container">
            <div class="row justify-content-around">
                <div class="col-lg-7 col-sm-8 text-center">
                    <img class="img-fluid" src="{{ vich_uploader_asset(b,'imageFile') }}" alt="">
                    <hr class="hr-style mt-5">
                </div>
            </div>

            <div class="row container justify-content-around mt-5">
                {% if app.request.locale == 'en' %}
                    {{ b.contentEn | raw }}
                {% else %}
                    {{ b.contentFr | raw }}
                {% endif %}
            </div>

            <div class="row justify-content-end mb-5 mt-5">
                posted on {{ b.postDate | date("m/d/Y") }}
            </div>

        </div>
    </section>

    {% include'default/footer.html.twig' %}
{% endblock %}